<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xian.myapp.activity.WeclomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/weclome_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/points_Rlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:id="@+id/points_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enabletrue" />
    </RelativeLayout>

    <TextView
        android:id="@+id/write_weclome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/points_Rlayout"
        android:layout_centerHorizontal="true"
        android:text="欢迎进入界面"
        android:textColor="#128"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:textSize="25dp" />
</RelativeLayout>
